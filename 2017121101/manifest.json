{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "0.1",

  "description": "adds a border to all webpages matching mozilla.org",

  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["borderify.js"]
    }
  ]
}
